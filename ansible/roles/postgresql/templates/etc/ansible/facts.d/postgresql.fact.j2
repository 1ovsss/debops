{% set postgresql__tpl_version = ansible_local.postgresql.version|d(postgresql__version) %}
{% set postgresql__tpl_server = ansible_local.postgresql.server|d(postgresql__server) %}
{% set postgresql__tpl_port = ansible_local.postgresql.port|d(postgresql__port) %}
{% set postgresql__tpl_delegate_to = ansible_local.postgresql.delegate_to|d(postgresql__delegate_to) %}
{% set postgresql__tpl_user = ansible_local.postgresql.user|d(postgresql__user) %}
{% if (postgresql__register_server|d() and postgresql__register_server.stdout) %}
{% set postgresql__tpl_server = "localhost" %}
{% endif %}
{
"delegate_to": "{{ postgresql__tpl_delegate_to }}",
"password_chars": "{{ postgresql__password_characters }}",
"port": "{{ postgresql__tpl_port }}",
"server": "{{ postgresql__tpl_server }}",
"user": "{{ postgresql__tpl_user }}",
"version": "{{ postgresql__tpl_version }}"
}
